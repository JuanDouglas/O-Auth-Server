@model OAuth.Server.Models.AuthModel

@{
    ViewBag.Title = "FirstStep";
}

<body style="background: url(../../Resources/coming_soon_background.png)">
    <center>
        <div class="card border-success mb-3" style="max-width:24rem;margin-top:10%;">
            <div class="card-header">
                <b>Login na Nexus</b>
            </div>
            <div class="card-body">
                <center> <div><img src="~/Resources/cristal.png" width="70" style="margin-bottom:20px"></div>
                <p><b>NEXUS</b></p></center>
                @using (Html.BeginForm("FirstStep", "Login", new { post = ViewBag.Post }))
                {
                    @Html.AntiForgeryToken()
                    if (ViewBag.Post == null)
                    {
                        ViewBag.Post = "none";
                    }
                    @Html.Hidden("Post", (string)ViewBag.Post)
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group"style="text-align:left">
                        @Html.LabelFor(model => model.User, htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-11">
                            @Html.EditorFor(model => model.User, new { htmlAttributes = new { @class = "form-control", @placeholder = "Seu nome de usuário ou e-mail.", required = true } })
                            @Html.ValidationMessageFor(model => model.User, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group" style="text-align:left;padding-left:15px">
                       <a href="Login/Create?post=@ViewBag.Post"></a>
                    </div>
                    <div class="form-group col-md-10" style="text-align:right"><input type="submit" class="btn btn-outline-success" value="Próximo" /></div>
                }
            </div>
        </div>
    </center>
</body>

